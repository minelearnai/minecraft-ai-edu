{
  "name": "minecraft-ai-middleware",
  "version": "1.0.0",
  "description": "WebSocket middleware for Minecraft Education AI integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "minecraft",
    "education",
    "websocket",
    "ai",
    "middleware"
  ],
  "author": "minelearnai",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.14.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/ws": "^8.5.8",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.16",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!**/node_modules/**",
      "!**/dist/**"
    ]
  }
}
