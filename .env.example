# Environment Variables Template
# Copy this file to .env and fill in your values

# ===========================================
# AI PROVIDER CONFIGURATION
# ===========================================

# Default AI provider (openai, local, anthropic, vertex)
AI_DEFAULT_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Local LLM Configuration (Ollama)
LOCAL_LLM_URL=http://localhost:11434
LOCAL_MODEL=llama2:7b

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Vertex AI Configuration
VERTEX_AI_PROJECT_ID=your_gcp_project_id
VERTEX_AI_REGION=us-central1
VERTEX_AI_MODEL=gemini-pro

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Elasticsearch URL (for knowledge base)
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX=minecraft_knowledge

# MongoDB URL (for analytics and tracking)
MONGODB_URL=mongodb://mongo:27017/minecraft_edu

# PostgreSQL (optional, for user management)
# POSTGRES_URL=postgresql://user:pass@localhost:5432/minecraft_edu

# Redis (for caching and sessions)
REDIS_URL=redis://redis:6379/0

# ===========================================
# SERVICE CONFIGURATION
# ===========================================

# Backend FastAPI Server
BACKEND_URL=http://backend:8000
BACKEND_PORT=8000

# WebSocket Middleware Server
MIDDLEWARE_URL=ws://middleware:3001
MIDDLEWARE_PORT=3001

# Frontend Dashboard
FRONTEND_URL=http://localhost:3000

# ===========================================
# MINECRAFT INTEGRATION
# ===========================================

# Code Connection WebSocket
MINECRAFT_CODE_CONNECTION_PORT=19131
MINECRAFT_WEBSOCKET_HOST=localhost
MINECRAFT_WEBSOCKET_PORT=8081

# Minecraft Education API
MINECRAFT_API_VERSION=1.20.0
MINECRAFT_AGENT_ENABLED=true

# ===========================================
# SECURITY SETTINGS
# ===========================================

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_minimum_64_chars_recommended
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Session Management
SESSION_SECRET=your_session_secret_here_minimum_32_chars
SESSION_TIMEOUT_MINUTES=60

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Environment Mode
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Hot Reload for Development
HOT_RELOAD=true

# ===========================================
# PRODUCTION SETTINGS
# ===========================================

# SSL Configuration (for production)
# SSL_CERT_PATH=/path/to/certificate.pem
# SSL_KEY_PATH=/path/to/private-key.pem
# USE_HTTPS=true

# Domain Configuration
# DOMAIN=your-domain.com
# SUBDOMAIN=api.your-domain.com

# Database Production Settings
# POSTGRES_DB=minecraft_edu_prod
# POSTGRES_USER=minecraft_prod_user
# POSTGRES_PASSWORD=your_secure_production_password
# POSTGRES_HOST=your-db-host.com
# POSTGRES_PORT=5432

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Error Tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application Performance Monitoring
# NEWRELIC_LICENSE_KEY=your_newrelic_license_key

# Google Analytics (for dashboard)
# GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Health Check Endpoints
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# ===========================================
# EDUCATIONAL FEATURES
# ===========================================

# Progress Tracking
TRACKING_ENABLED=true
TRACKING_ANONYMIZE=false

# Assessment Tools
ASSESSMENT_ENABLED=true
ASSESSMENT_AUTO_GRADE=false

# Content Filtering
CONTENT_FILTER_ENABLED=true
CONTENT_FILTER_STRICTNESS=medium

# Multi-language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,pl

# ===========================================
# DOCKER COMPOSE OVERRIDES
# ===========================================

# Service Ports (for docker-compose)
DOCKER_BACKEND_PORT=8000
DOCKER_MIDDLEWARE_PORT=3001
DOCKER_FRONTEND_PORT=3000
DOCKER_ELASTICSEARCH_PORT=9200
DOCKER_MONGODB_PORT=27017
DOCKER_REDIS_PORT=6379

# Container Resources
DOCKER_MEMORY_LIMIT=2g
DOCKER_CPU_LIMIT=2

# ===========================================
# NOTES
# ===========================================
# 
# 1. SECURITY: Never commit .env file to version control!
# 2. Generate strong random values for all secrets
# 3. Use environment-specific configurations
# 4. Test all AI providers before production deployment
# 5. Configure proper resource limits for Docker containers
# 6. Enable monitoring and logging for production
# 7. Set up proper backup strategies for databases
# 8. Review and update dependencies regularly
#